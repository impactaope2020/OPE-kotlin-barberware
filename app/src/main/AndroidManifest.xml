<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.wilsonalves.opebarberware">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BarberwareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".NovoPortifolioActivity" />
        <activity
            android:name=".PortifolioDetailsActivity"
            android:theme="@style/AppTheme.toolbar" />
        <activity
            android:name=".LocalizacaoActivity"
            android:theme="@style/AppTheme.toolbar" />
        <activity
            android:name=".PortifolioActivitiy"
            android:theme="@style/AppTheme.toolbar" />
        <activity
            android:name=".CadastrarAgendamentoActivity"
            android:theme="@style/AppTheme.toolbar" />
        <activity
            android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.toolbar" />
        <activity android:name=".DebugActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>